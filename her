    <script>
        // ÿ•ŸÜÿ¥ÿßÿ° QR Code ÿπŸÜÿØ ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑÿµŸÅÿ≠ÿ©
        function generateQRCode() {
            const currentUrl = window.location.href;
            QRCode.toCanvas(document.getElementById('qrcode'), currentUrl, function (error) {
                if (error) console.error(error);
                console.log('QR code generated successfully!');
            });
        }

        // Create confetti effect
        function createConfetti() {
            const container = document.getElementById('confettiContainer');
            const colors = ['#ffd700', '#ff69b4', '#9370db', '#00ffff', '#ff4500'];
            
            for (let i = 0; i < 100; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.animationDelay = Math.random() * 5 + 's';
                confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.width = Math.random() * 10 + 5 + 'px';
                confetti.style.height = Math.random() * 10 + 5 + 'px';
                container.appendChild(confetti);
            }
        }

        // Check the name and show birthday message
        function checkName() {
            const nameInput = document.getElementById('nameInput');
            const name = nameInput.value.trim();
            
            // Only allow "Ghena" to access
            if (name.toLowerCase() === "ghena") {
                document.getElementById('welcomeScreen').classList.add('hidden');
                document.getElementById('birthdayScreen').classList.remove('hidden');
                
                // Personalize the message
                document.getElementById('personalizedTitle').textContent = `Happy Birthday, Ghena!`;
                document.getElementById('birthdayMessage').textContent = 
                    `Heyy Ghena, wishing you the most amazing birthday filled with joy, laughter, and wonderful surprises!`;
                
                // Create confetti
                createConfetti();
            } else {
                alert('Sorry, this surprise is only for Ghena! Please enter "Ghena" to continue.');
            }
        }

        // Open the first gift box
        function openGift() {
            const giftBox = document.getElementById('mainGift');
            const giftContent = document.getElementById('giftContent');
            
            giftBox.classList.add('open');
            
            setTimeout(() => {
                giftContent.style.display = 'block';
                createConfetti();
            }, 800);
        }

        // Open the inner gift box
        function openInnerGift() {
            const innerGift = document.getElementById('innerGift');
            const finalGift = document.getElementById('finalGift');
            
            innerGift.classList.add('open');
            
            setTimeout(() => {
                finalGift.style.display = 'block';
                createConfetti();
            }, 800);
        }

        // Show the special message
        function showMessage() {
            const specialMessage = document.getElementById('specialMessage');
            specialMessage.style.display = 'block';
            createConfetti();
        }

        // Allow Enter key to submit name
        document.getElementById('nameInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                checkName();
            }
        });

        // Generate QR code when page loads
        window.onload = function() {
            generateQRCode();
            createConfetti();
        };
    </script>
</body>
